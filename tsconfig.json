{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "docs/**/*.tsx", "test/**/*.d.ts"],
}
